@using MetersMVC.ViewModels
@model MetersMVC.ViewModels.MeterReadingViewModel

@{
    ViewData["Title"] = "Create Meter Reading";
}

<h2>Create Meter Reading</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken() 

    <div class="form-group">
        <label for="MeterId">Meter Id</label>
        <input type="number" asp-for="MeterId" class="form-control" />
        <span asp-validation-for="MeterId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ReadingValue">Reading Value</label>
        <input type="number" asp-for="Reading" class="form-control" />
        <span asp-validation-for="Reading" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ReadingDate">Reading Date</label>
        <input type="date" asp-for="ReadingDate" class="form-control" />
        <span asp-validation-for="ReadingDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
