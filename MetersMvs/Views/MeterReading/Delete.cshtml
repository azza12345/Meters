@using MetersMVC.ViewModels
@model MetersMVC.ViewModels.MeterReadingViewModel

@{
    ViewData["Title"] = "Delete Meter Reading";
}

<h2>Delete Meter Reading</h2>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>MeterReading</h4>
        <dl class="row">
            <dt class="col-sm-2">Meter Id</dt>
            <dd class="col-sm-10">@Model.MeterId</dd>
            <dt class="col-sm-2">Reading Value</dt>
            <dd class="col-sm-10">@Model.Reading</dd>
            <dt class="col-sm-2">Reading Date</dt>
            <dd class="col-sm-10">@Model.ReadingDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
