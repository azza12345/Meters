@model IEnumerable<MetersMVC.ViewModels.MeterReadingViewModel>

<div class="container mt-4">
    <h2 class="text-center mb-4">Meter Readings</h2>

    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Reading</th>
                <th>Reading Date</th>
                <th>Meter ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reading in Model)
            {
                <tr>
                    <td>@reading.Reading</td>
                    <td>@reading.ReadingDate.ToString("dd-MM-yyyy")</td>
                    <td>@reading.MeterId</td>
                    <td>
                        <!-- Use the asp-controller and asp-action attributes to create a dynamic URL -->
                        <a asp-controller="MeterReading" asp-action="Edit" asp-route-id="@reading.Id" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="Delete" asp-controller="MeterReading" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@reading.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-controller="Meters" asp-action="Index" class="btn btn-primary btn-lg">Back to Meters List</a>
    </div>
</div>
