@using MetersMVC.ViewModels
@model MetersMVC.ViewModels.MeterViewModel

@{
    ViewData["Title"] = "Delete Meter";
}

<h1>Delete Meter</h1>

<h4>Are you sure you want to delete this?</h4>
<div>
    <h4>Meter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Create Date</dt>
        <dd class="col-sm-10">@Model.CreateDate.ToString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

